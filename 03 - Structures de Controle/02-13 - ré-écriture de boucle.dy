subexo [lvu] une boucle `while`

~~~cpp
for (; i < 10; ++i) {
   cout << i << endl;
}
~~~

exp
~~~cpp
while (i < 10) {
   cout << i << endl;
   ++i;
}
~~~

subexo [xhd] une boucle `do ... while`

~~~cpp
for (; i < 10; ++i) {
   cout << i << endl;
}
~~~

exp
~~~cpp
if (i < 10) {
   do {
      cout << i << endl;
      ++i; 
   } while (i < 10);
}
~~~


subexo [dpn] une boucle `for`

~~~cpp
while (i-- > 10) {
   cout << i << endl;
}
~~~

exp
~~~cpp
for (; i-- > 10;) {
    cout << i << endl;
}
~~~

subexo [nsy] une boucle `do ... while`

~~~cpp
while (i-- > 10) {
   cout << i << endl;
}
~~~

exp
~~~cpp
if (i > 10) {
   do {
      --i;
      cout << i << endl;
   } while (i > 10);
}
--i;   // nécessaire pour que i ait la même valeur en fin de boucle
~~~


subexo [wpc] une boucle `for`

~~~cpp
do {
  cout << i << endl;
  ++i; 
} while (i < 10);
~~~

exp
~~~cpp
cout << i << endl; 
for (++i; i < 10; ++i) {
    cout << i << endl;
}
~~~

